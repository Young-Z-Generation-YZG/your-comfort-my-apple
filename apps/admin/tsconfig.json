{
   "compilerOptions": {
      "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@components/*": ["./src/components/*"],
         "@assets/*": ["./assets/*"],
         "~/*": ["./*"]
      },
      "forceConsistentCasingInFileNames": true
   },
   "include": ["next-env.d.ts","jsx.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"]
}
