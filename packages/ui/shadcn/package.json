{
  "name": "@kltn-monorepo/ui-shadcn",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc && npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css",
    "dev": "tsc --watch & npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/Button": {
      "import": "./dist/components/Button.js",
      "require": "./dist/components/Button.js",
      "types": "./dist/components/Button.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./theme.css": "./src/theme.css",
    "./styles.css": "./dist/styles.css"
  },
  "devDependencies": {
    "@kltn-monorepo/typescript-config": "workspace:*",
    "@kltn-monorepo/utils": "workspace:*",
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.0.0",
    "tailwindcss": "4.0.17"
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.1.2",
    "class-variance-authority": "0.7.0",
    "@tailwindcss/cli": "4.1.16",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
