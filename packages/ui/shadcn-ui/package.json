{
  "name": "@kltn-monorepo/ui-shadcn",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc && npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css",
    "dev": "tsc --watch & npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/button": {
      "import": "./dist/components/button.js",
      "require": "./dist/components/button.js",
      "types": "./dist/components/button.d.ts"
    },
    "./theme.css": "./src/theme.css",
    "./styles.css": "./dist/styles.css"
  },
  "devDependencies": {
    "@kltn-monorepo/typescript-config": "workspace:*",
    "@kltn-monorepo/utils": "workspace:*",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "@tailwindcss/cli": "^4.1.14",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
